#!/bin/bash

espeak "go"
i=0

music1=$HOME/music/*Netgame*

while true; do
  espeak "block $i. $((i*80/60)) hours. $(((i*80)%60)) minutes." -s 130
  espeak "are you sleeping"
  #sleep 1
  #espeak "Are you sleeping?" -s 150
  #sleep 3
  #espeak "Are you sleeping?" -s 100
  if [ $i = 4 ]; then
    mpv mpv --vo=null $music1 -ss 0 --end 11.5 --volume 50
  fi

  if [ $i -ge 6 ]; then
    espeak "Wake up"
  fi
  if [ $i -ge 7 ]; then
    for i in $(seq 10); do
      espeak "Wake up"
    done
  fi
  #alarm-timer -m 80 --im "" --em ""
  i=$(($i + 1))
done
