#!/bin/bash

espeak "go"
i=0

while true; do
  espeak "$((i*80)) minutes. Are you sleeping?"
  sleep 1
  espeak "Are you sleeping?" -s 150
  sleep 3
  espeak "Are you sleeping?" -s 100
  if [ i = 4 ]; then
    mpv mpv --vo=null $HOME/music/*Netgame* -ss 0 --end 11.5 --volume 50
  fi
  #alarm-timer -m 80 --im "" --em ""
  i=$(($i + 1))
done
